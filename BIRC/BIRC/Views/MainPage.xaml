<Page
    x:Class="BIRC.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BIRC.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" DataContext="{StaticResource BIRCViewModelDataContext}">

    <Page.Resources>
        <CollectionViewSource x:Key="CollectionViewSourceServersKey" x:Name="CollectionViewSourceServers" 
                              Source="{Binding ByServers}" ItemsPath="Items" IsSourceGrouped="True">
        </CollectionViewSource>
    </Page.Resources>

    <Grid Margin="0,0,5,0">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="720" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="LeftPane.DisplayMode" Value="Inline"/>
                        <Setter Target="LeftPane.IsPaneOpen" Value="True"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState>
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="LeftPane.DisplayMode" Value="Overlay"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <SplitView x:Name="LeftPane"
               DisplayMode="Inline"
               IsTabStop="False">
            <SplitView.Pane>
                <Grid Background="{ThemeResource AppBarBackgroundThemeBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="64"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="42"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="42"/>
                        <RowDefinition Height="42"/>
                    </Grid.RowDefinitions>
                    <ListView x:Name="serverListView" Grid.Row="1"
                          ItemsSource="{Binding Source={StaticResource CollectionViewSourceServersKey}}"
                          IsSynchronizedWithCurrentItem="False" SelectedItem="{Binding AccountSelection, Mode=TwoWay}">
                        <ListView.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="{Binding Name}"/>
                                    </DataTemplate>
                                </GroupStyle.HeaderTemplate>
                            </GroupStyle>
                        </ListView.GroupStyle>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <RelativePanel
                                        x:Name="serverStackPanel">
                                </RelativePanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <Button Style="{ThemeResource TextBlockButtonStyle}" 
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="2"
                    Command="{Binding AddConnection}">
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="Add"/>
                            <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Margin="5,0,0,0">Add connection</TextBlock>
                        </StackPanel>
                    </Button>
                    <Line Grid.Row="3" X1="1000" Y1="0" X2="0" Y2="0"  Margin="5,10,5,0" StrokeThickness="3" Stroke="Black" Fill="Black"></Line>
                    <Button Style="{ThemeResource TextBlockButtonStyle}" 
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="4">
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="Setting"/>
                            <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Margin="5,0,0,0">Settings</TextBlock>
                        </StackPanel>
                    </Button>
                </Grid>
            </SplitView.Pane>
            <SplitView.Content>
                <RelativePanel x:Name="MainPanel" Margin="5,32,5,0">
                    <ScrollViewer x:Name="RichTextBlockScroll" 
                                  
                                  RelativePanel.AlignLeftWithPanel="True" 
                                  RelativePanel.AlignRightWithPanel="True"
                                  RelativePanel.AlignTopWithPanel="True"
                                  RelativePanel.AlignBottomWithPanel="True"
                                  Margin="0,0,0,36">
