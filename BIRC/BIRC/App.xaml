<Application
    x:Class="BIRC.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BIRC"
    xmlns:dc="using:BIRC.ViewModels"
    RequestedTheme="Light">

    <Application.Resources>
        <dc:BIRCViewModel x:Key="BIRCViewModelDataContext"/>
        <dc:AddServerViewModel x:Key="AddServerViewModelDataContext"/>
        <Thickness x:Key="DefaultThickness">0,10,0,10</Thickness>
        <Thickness x:Key="TitleThickness">0,0,0,20</Thickness>
        <Thickness x:Key="FormThickness">0,10,0,0</Thickness>
    </Application.Resources>

</Application>
